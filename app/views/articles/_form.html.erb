<%= simple_form_for(@article, html: { class: 'form-horizontal' }) do |f| %>

	<% if @article.errors.any? %>
	<div class="error_explanation">
		<h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved</h2>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>
	
	<%= f.input :title %>
	<%= f.input :profile_name %>
	<%= f.input :age %>r
	<%= f.input :text, prompt: 'Type Text' %>
	<div class="form-actions">
		<%= f.button :submit, 'Reset', type: "reset", class: 'btn btn-danger' %>
		<%= f.button :submit, "Post new article", class: 'btn btn-success'%>
	</div>
<% end %>