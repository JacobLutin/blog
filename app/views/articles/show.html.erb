<h1>Article #<%= @article.id %></h1>

<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>
<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>

<h3>Comments</h3>
<%= render @article.comments %>


<h3>Add new comment:</h3>
<%= render 'comments/form' %>

<%= link_to "Back", articles_path, class: 'btn' %>
<%= link_to "Edit", edit_article_path(@article), class: 'btn' %>
<%= link_to "Destroy", @article, method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: 'btn btn-danger' %>