<div class="well">
	<p>Comment #<%= comment.id %></p>
	<p>
		<strong>Commenter: </strong>
		<%= comment.commenter %>
	</p>
	<p>
		<strong>Body: </strong>
		<%= comment.body %>
	</p>

	<%= link_to "Destroy comment", [comment.article, comment], method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
</div>